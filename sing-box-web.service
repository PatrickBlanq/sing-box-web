[Unit]
Description=sing-box Web Controller
After=network-online.target
Wants=network-online.target

[Service]
User=root
Environment=SB_WEB_HOST=192.168.50.2
Environment=SB_WEB_PORT=8088
Environment=SB_WEB_TOKEN=changeme
Environment=SB_START=/root/arm/sb-start.sh
Environment=SB_STOP=/root/arm/sb-stop.sh
Environment=SB_SERVICE=sing-box
ExecStart=/usr/bin/python3  /opt/sb-web/app.py
Restart=always

[Install]
WantedBy=multi-user.target